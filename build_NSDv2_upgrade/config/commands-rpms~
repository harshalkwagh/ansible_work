#Build NFP V1 Upgrade Tarball
cd /nfp
git clone https://sriharshabarkuru:sri1990@github.com/oneconvergence/nsd-gbp.git -b NSD_V2
cd nsd-gbp/gbpservice/contrib/nfp/tools/
bash prepare_nfp_v1_upgrade_package.sh sriharshabarkuru sri1990 NSD_V2
ls openstack-nfp.tgz
cd /nfp
mv /nfp/nsd-gbp/gbpservice/contrib/nfp/tools/openstack-nfp.tgz /nfp/.

#Build nsd-rpm
cd /nfp
rm -rf nsd-gbp nsd-build
git clone https://github.com/oneconvergence/nsd-gbp.git -b NSD_V2
git clone https://github.com/oneconvergence/nsd-build.git -b master
cp -r nsd-build/build-spec-files/nsd-gbp/rpm/ nsd-gbp/
cp -r nsd-build/tools/setup_nsd.py nsd-gbp/gbpservice/nsd/tools/setup_nsd_advanced.py
cp -r nsd-build/tools/setup_nsd_images.sh nsd-gbp/gbpservice/nsd/tools/
cd nsd-gbp/
chmod +x rpm/build-nsd-rpm.sh
./rpm/build-nsd-rpm.sh --build_version=0 --release_version=2.2.1
cd /nfp
mv /nfp/nsd-gbp/rpmbuild/RPMS/noarch/* /nfp/.

# Build sslvpn-rmp
cd /nfp
#rm -rf nsd-gbp
rm -rf nsd-build
#git clone https://sriharshabarkuru:sri1990@github.com/oneconvergence/nsd-gbp.git -b NSD_V2
git clone https://sriharshabarkuru:sri1990@github.com/oneconvergence/nsd-build.git -b master
cp -r nsd-gbp/gbpservice/nsd/extensions/sslvpn/ /nfp
cp -r nsd-build/build-spec-files/nsd-ssl-vpn/rpm/ /nfp
chmod +x rpm/build-nsd-sslvpn-rpm.sh
./rpm/build-nsd-sslvpn-rpm.sh --build_version=0 --release_version=2.2.1
mv /nfp/rpmbuild/RPMS/noarch/* /nfp/


#build gbpui
cd /nfp
rm -rf visibility
git clone https://sriharshabarkuru:sri1990@github.com/oneconvergence/visibility.git
cd visibility/horizon/
bash build_rpm.sh
mv /nfp/rpmbuild/RPMS/noarch/* /nfp/.


